<!DOCTYPE html>
<html>
	<head>
		<% include ../../partials/head %>
	</head>
	<body style="background-color:#BDBDBD">
		<header> 
			<div>
					<% include ../../partials/header %>
			</div>
        </header>
        <% include ../../partials/sidebar %>
        <div id="main">
        <div class="container text-center mx-sm-3">
				<h2 class="mt-5">Results</h2>
                    <% if(users.length > 0) { %>
                        <table class="table table-striped table-dark text-center">
                            <h3 class="mt-2">Users</h3>
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Last Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Phone Number</th>
                                    <th scope="col">Residency</th>
                                    <th scope="col">Building</th>
                                    <th scope="col">Room Number</th>
                                    <th scope="col">Commuter?</th>
                                    <th scope="col">Dormer?</th>
                                    <th scope="col">Faculty?</th>
                                </tr>	
                            </thead>
                            <tbody>
                                <% for(var i in users) { %>
                                    <tr>
                                        <td><%= users[i].id %></td>
                                        <td><%= users[i].firstname %></td>
                                        <td><%= users[i].lastname %></td>
                                        <td><%= users[i].email %></td>
                                        <td><%= users[i].phone_number %></td>
                                        <td><%= users[i].residency %></td>
                                        <td><%= users[i].building %></td>
                                        <td><%= users[i].room_number %></td>
                                        <td>
                                            <% if(users[i].commuter) { %>
                                                Yes
                                            <% } else { %>
                                                No
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if(users[i].dormer) { %>
                                                Yes
                                            <% } else { %>
                                                No
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if(users[i].faculty) { %>
                                                Yes
                                            <% } else { %>
                                                No
                                            <% } %>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    <% } %>
            </div>
</div>
<footer> 
            <div>
                <% include ../../partials/footer %>
            </div>
        </footer>
</body>
</html>