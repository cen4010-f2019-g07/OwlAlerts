		<header> 
			<div>
                <% include ../../partials/header %>
			</div>
    </header>
    <% include ../../partials/sidebar %>

      <div id="main">
        <% include ../../partials/flash %>
          <div class="container">
              <div class="card border-0 shadow my-5">
                  <div class="card-body p-5">
