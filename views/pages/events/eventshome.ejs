<!DOCTYPE html>
<html>
	<head>
		<% include ../../partials/head %>
	</head>
	<body style="background-color:#BDBDBD">
		<header> 
			<div>
					<% include ../../partials/header %>
			</div>
        </header>
        <% include ../../partials/sidebar %>

        <div id="main">
                <div class="container">
                        <div class="card border-0 shadow my-5">
                            <div class="card-body p-5">
                        <div class="mt-4 text-center">
            <div class="container">
                <div class="mt-5 display-3 text-center">
                    Upcoming Events!
                </div>
                <div class="mt-2 h3 text-center">
                    Interact with your peers and your school with these fun events!
                </div>
                <div class="container mt-4">
                    <div class="row">
                        
                        <div class="col-md">
                                <h4 class="text-center mt-5"><u>List of Upcoming Events</u></h4>

                                <% if(events.length > 0) { %>
                                    <table class="table table-striped table-dark text-center mt-4">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th scope="col">ID</th>
                                                <th scope="col">Location</th>
                                                <th scope="col">Starting Date</th>
                                                <th scope="col">Ending Date</th>
                                                <th scope="col">Event Description</th>
                                            </tr>	
                                        </thead>
                                        <tbody>
                                            <% for(var i in events) { %>
                                                <tr>
                                                    <td><%= events[i].id %></td>
                                                    <td><%= events[i].location %></td>
                                                    <td><%= events[i].start_date %></td>
                                                    <td><%= events[i].end_date %></td>
                                                    <td><%= events[i].description %></td>
                                                    <td>
                                                        <a href="/events/event/<%=events[i].id%>" class="btn btn-secondary">View Event</a>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                <% } %>
                        </div>   
                    </div>   
                </div>
        </div>
        </div>
        </div>
        </div>
        <footer> 
            <div>
                <% include ../../partials/footer %>
            </div>
        </footer>
    </body>
</html>