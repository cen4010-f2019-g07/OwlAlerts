<!DOCTYPE html>
<html>
	<head>
		<% include ../../partials/head %>
	</head>
	<body style="background-color:#BDBDBD">
		<header> 
			<div>
					<% include ../../partials/header %>
			</div>
        </header>
        <% include ../../partials/sidebar %>
        <div id="main">
                <div class="container">
                        <div class="card border-0 shadow my-5">
                            <div class="card-body p-5">
                        <div class="mt-4 text-center">
            <div class="container">
                <div class="mt-5 display-3 text-center">
                    What to be Aware of On Campus
                </div>
                <div class="container mt-4">
                        <div class="text-center mt-4 py-4" style="background-color:#73A8F4">
                                <div class="h4">
                                    Found Your Own Issue?
                                </div>
                                Make Sure to Report It!
                                <br>
                                <a href="/issues/create" class="btn btn-secondary btn mt-2">Report an Issue!</a>

                            </div>
                    <div class="row">
                        
                        <div class="col-md">
                                <h4 class="text-center"><u>Recently Reported Issues</u></h4>
                                <% if(issues.length > 0) { %>
                                    <table class="table table-striped table-dark text-center mt-4">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th scope="col">ID</th>
                                                <th scope="col">Title</th>
                                                <th scope="col">Description</th>
                                                <th scope="col">Location</th>
                                                <th scope="col">Verified?</th>
                                                <th scope="col">Resolved?</th>
                                            </tr>	
                                        </thead>
                                        <tbody>
                                            <% for(var i in issues) { %>
                                                <tr>
                                                    <td><%= issues[i].id %></td>
                                                    <td><%= issues[i].title %></td>
                                                    <td>
                                                        <% if(issues[i].description.length > 50) { %>
                                                            <%= issues[i].description.substring(0, 50) + '...' %>
                                                        <% } else { %>
                                                            <%= issues[i].description %>
                                                        <% } %>
                                                    </td>
                                                    <td><%= issues[i].location %></td>
                                                    <td>
                                                        <% if(issues[i].verified) { %>
                                                            Yes
                                                        <% } else { %>
                                                            No
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if(issues[i].resolved) { %>
                                                            Yes
                                                        <% } else { %>
                                                            No
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <a href="/issues/issue/<%=issues[i].id%>" class="btn btn-secondary">View</a>
                                                    </td>
                                                </tr>
                                            <% } else { %>
                                                <p>No Reported Issues</p>
                                            <% } %>
                                        </tbody>
                                    </table>
                                <% } %>
                                <a href="/issues/issues" class="btn btn-secondary">View More Issues</a>
                        </div>   
                    </div>   
                </div>
        </div>
        </div>
        </div>
        </div>
        <% include ../../partials/footer %>
    </body>
</html>