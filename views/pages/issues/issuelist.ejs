<!DOCTYPE html>
<html>
	<head>
		<% include ../../partials/head %>
	</head>
	<body style="background-color:#BDBDBD">
		<header> 
			<div>
					<% include ../../partials/header %>
			</div>
        </header>
        <% include ../../partials/sidebar %>
        <div id="main">
        <div class="container text-center mx-sm-3">
				<h2 class="mt-5">Results</h2>
                    <% if(issues.length > 0) { %>
                        <table class="table table-striped table-dark text-center ml-5">
                            <h3 class="mt-2">Issues</h3>
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Location</th>
                                    <th scope="col">Submitted by User</th>
                                    <th scope="col">Verified by Faculty</th>
                                    <th scope="col">Resolved by Faculty</th>
                                    <th scope="col">Verified?</th>
                                    <th scope="col">Resolved?</th>
                                    <th scope="col"></th>
                                </tr>	
                            </thead>
                            <tbody>
                                <% for(var i in issues) { %>
                                    <tr>
                                        <td><%= issues[i].id %></td>
                                        <td><%= issues[i].title %></td>
                                        <td>
                                            <% if(issues[i].description.length > 50) { %>
                                                <%= issues[i].description.substring(0, 50) + '...' %>
                                            <% } else { %>
                                                <%= issues[i].description %>
                                            <% } %>
                                        </td>
                                        <td><%= issues[i].location %></td>
                                        <td><%= issues[i].submitted_user %></td>
                                        <td><%= issues[i].verified_faculty %></td>
                                        <td><%= issues[i].resolved_faculty %></td>
                                        <td>
                                            <% if(issues[i].verified) { %>
                                                Yes
                                            <% } else { %>
                                                No
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if(issues[i].resolved) { %>
                                                Yes
                                            <% } else { %>
                                                No
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/issues/issue/<%= issues[i].id %>" class="btn btn-secondary">View Issue</a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    <% } %>
                    <% include ../../partials/paginate %>
            </div>
    </div>
<footer> 
            <div>
                <% include ../../partials/footer %>
            </div>
        </footer>
</body>
</html>