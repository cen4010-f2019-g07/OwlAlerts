<!DOCTYPE html>
<html>
	<head>
		<% include ../../partials/head %>
	</head>
	<body style="background-color:#BDBDBD">
		<header> 
			<div>
					<% include ../../partials/header %>
			</div>
        </header>
        <% include ../../partials/sidebar %>
        <div id="main">
        <div class="container">
                <div class="card border-0 shadow my-5">
                    <div class="card-body p-5">
                <div class="text-center">
        <div class="container">
            <div class="row">
                <div class="col">
				<h2 class="mt-5">Issues List</h2>
                    <% if(issues.length > 0) { %>
                        <table class="table table-striped table-dark text-center">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Location</th>
                                    <th scope="col">Submitted by User</th>
                                    <th scope="col">Verified by Faculty</th>
                                    <th scope="col">Resolved by Faculty</th>
                                    <th scope="col">Verified?</th>
                                    <th scope="col">Resolved?</th>
                                </tr>	
                            </thead>
                            <tbody>
                                <% for(var i in issues) { %>
                                    <tr>
                                        <td><%= issues[i].id %></td>
                                        <td><%= issues[i].title %></td>
                                        <td><%= issues[i].description %></td>
                                        <td><%= issues[i].location %></td>
                                        <td><%= issues[i].submitted_user %></td>
                                        <td><%= issues[i].verified_faculty %></td>
                                        <td><%= issues[i].resolved_faculty %></td>
                                        <td>
                                            <% if(issues[i].verified) { %>
                                                Yes
                                            <% } else { %>
                                                No
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if(issues[i].resolved) { %>
                                                Yes
                                            <% } else { %>
                                                No
                                            <% } %>
                                        </td>

                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    <% } %>
            </div>
            </div>
            </div>
            </div>
            </div>
            </div>
</div>
</body>
</html>